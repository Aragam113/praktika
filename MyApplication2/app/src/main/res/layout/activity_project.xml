<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/projectImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/img_1"
        android:contentDescription="Изображение проекта"
        android:scaleType="centerCrop"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/projectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Название проекта"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/projectBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Бюджет: 500,000"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/projectDeadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Срок: 31.12.2024"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/projectStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Статус: В процессе"
        android:textSize="16sp"/>

</LinearLayout>
